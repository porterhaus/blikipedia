<h1>Ready to drop some knowledge?</h1>

<%= simple_form_for @wiki do |f| %>
  <%= f.input :title, placeholder: "Enter a title [required]", label: false %>
  <%= f.input :body, as: :text, label: false %>







  <div class="field block">
    <%= f.text_field :title, autofocus: true, placeholder: "Enter a title [required]" %>
  </div>
  <div class="field block">
    <%= f.text_area :body, autofocus: true, rows: 8, placeholder: "Enter some text... [required]" %>
  </div>
  <% if current_user.role == 'admin' || current_user.role == 'premium' && current_user.id == @wiki.user_id %>
    <div class="checkbox">
      <%= f.check_box :private %>
      <%= f.label "Is this Wiki private?" %>
    </div>

    <%= f.association :users, :as => :check_boxes %>
  <% end %>

  <div class="actions">
    <%= f.submit "Save it!", class: "btn block free" %>
  </div>
<% end %>


