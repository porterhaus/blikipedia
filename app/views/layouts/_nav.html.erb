<!-- _nav partial -->
<header class="nav row">
  <div class="container">
    <%= link_to root_path do %>
      <%= image_tag("logo.png", :alt => "Bliki") %>
    <% end %>
    <ul>
      <li><%= link_to "Blikis", wikis_path %></li>
    <% if current_user.present? %>
      <li>
        <%= link_to do %>
          Hey, <%= current_user.name %>
        <% end %>
      </li>
      <% if current_user.role == "standard" %>
      <li>
          <%= link_to "Upgrade", new_charge_path %>
      </li>
      <% end %>
      <% if current_user.role == "premium" %>
      <li>
          <%= link_to "Downgrade", charges_downgrade_path %>
      </li>
      <% end %>
      <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Sign Up", new_user_registration_path, class: "highlight" %></li>
    <% end %>
    </ul>
  </div>
</header>